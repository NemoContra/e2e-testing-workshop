{
  "name": "flight-card",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/flight-card/src",
  "prefix": "flight",
  "tags": [],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/flight-card/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/flight-card/**/*.ts",
          "libs/flight-card/**/*.html"
        ]
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "libs/flight-card/cypress.config.ts",
        "testingType": "e2e",
        "devServerTarget": "flight:serve"
      },
      "configurations": {
        "production": {
          "devServerTarget": "flight:serve:production"
        },
        "watch": {
          "watch": true
        }
      }
    },
    "component-test": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "libs/flight-card/cypress.config.ts",
        "testingType": "component",
        "skipServe": true,
        "devServerTarget": "flight:build"
      }
    }
  }
}
